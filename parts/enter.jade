template(name='login')
    .ui.padded.stackable.grid
        .centered.row
            .ten.wide.column
                h1.ui.center.aligned.header 
                    +i name='treadmill'
                    |Gold Run Health Club Login
                    
                    //- i.massive.icons
                    //-     i.home.icon
                    //-     i.corner.right.chevron.icon
                if message
                    h4.ui.center.aligned.header #{message}
                .ui.fluid.large.input(class=login_class)
                    .ui.inline.small.header 
                        +i name='user'
                        //- i.user.icon
                        |username
                    input.username(type='text')
                .ui.fluid.large.input(class=login_class)
                    .ui.inline.small.header 
                        +i name='password'
                        | password
                    input.password(type='password')
                //- if username
                if logging_in
                    .ui.fluid.big.basic.button.enter(title="login #{username}" class=enter_class)
                        //- i.sign.in.alternate.icon
                        +i name='enter-2' classes='ui mini inline image'
                        |login
                        | #{username}
                        //- i.right.chevron.icon
                else
                    if username
                        .ui.center.aligned.basic.segment
                            .ui.header no '#{username}' user
                            a.ui.basic.button(href='/register')
                                //- i.user.plus.icon
                                +i name='enter-2' classes='ui mini inline image'                    
                                | register
                .ui.center.aligned.basic.segment    
                    a.ui.large.basic.button(href='/forgot_password')
                        +i name='forgot-password' classes='ui mini inline image'                    
                        //- i.refresh.icon
                        |forgot password
                    a.ui.large.basic.button(href='/register') 
                        //+i name='add-user-male' classes='ui mini inline image'                    
                        i.user.plus.icon
                        |register



template(name='register')
    .ui.padded.stackable.grid
        .centered.row
            .ten.wide.column
                .ui.center.aligned.basic.segment
                    .ui.header gold run registration
                    //- i.massive.icons
                    //-     i.home.grey.icon
                    //-     i.corner.plus.icon
                if message
                    h4.ui.center.aligned.header #{message}
                .ui.fluid.labeled.input(class=login_class)
                    .ui.small.inline.header 
                        i.user.grey.icon
                        |username
                    input.username(type='text')
                .ui.fluid.labeled.input(class=login_class)
                    .ui.small.inline.header 
                        i.lock.grey.icon
                        | password
                    input.password(type='password')
                .ui.fluid.labeled.input(class=login_class)
                    .ui.small.inline.header 
                        i.lock.grey.icon
                        | password again
                    input.password2(type='password')
                if username
                    if registering
                        .ui.fluid.large.circular.button.enter(class=enter_class)
                            i.user.plus.icon
                            |register '#{username}'
                    else
                        .ui.small.header username "#{username}" found
                        a.ui.basic.circular.button(href='/login') login
                        
                        
                .ui.center.aligned.basic.segment    
                    //- .ui.small.header By clicking Register, you agree to our 
                    //-     a(href='https://henry-health.com/privacy-policy/' target="_window") Privacy Policy
                    .ui.small.header or
                        a.ui.circular.basic.sign.in.button(href='/login') 
                            |login
                            i.right.chevron.icon
                    



template(name='forgot_password')
    .ui.padded.stackable.grid
        .centered.row
            .fifteen.wide.column
                //- h1.ui.center.aligned.header Reset Password
                h1.ui.center.aligned.grey.header
                    +i name='forgot-password' classes='ui mini inline image'                    
                    |forgot password 
                if message
                    h4.ui.center.aligned.header #{message}
                .ui.center.aligned.basic.segment
                    .ui.inline.header
                        +i name='user'
                        | username
                    .ui.left.icon.large.input(class=login_class)
                        input.username(type='text')
                    .ui.circular.blue.submit.button.submit_username submit
                    .ui.dividing.header or
                    .ui.inline.header
                        +i name='email'
                        | email
                    .ui.left.icon.labeled.large.input
                        input.email(type='email')
                    .ui.circular.blue.submit.button.submit_email submit
                if username
                    if logging_in
                        .ui.fluid.large.hhblue.circular.button.enter(title="Login #{username}" class=enter_class)
                            |login '#{username}'
                            i.right.arrow.icon
                    else
                        .ui.center.aligned.secondary.segment
                            .ui.small.grey.header username "#{username}" not found
                            a(href='/register') register
                .ui.center.aligned.basic.segment    
                    a.ui.circular.big.basic.button(href='/login') 
                        +i name='enter-2' classes='ui mini inline image'
                        |login
                    a.ui.circular.big.basic.button(href='/register')
                        +i name='add-user-male' classes='ui mini inline image'
                        |register


template(name='reset_password')
    .ui.padded.stackable.grid
        .centered.row
            .fifteen.wide.column
                img.ui.centered.image(src="{{c.url 'henry_logo'}}")
                .ui.center.aligned.grey.header
                    i.refresh.icon
                    |Reset Password 
                form#reset_password_form.ui.form
                    .field
                        label Password
                        .ui.left.icon.input
                            input.password1(type='password')
                            i.lock.icon
                    .field
                        label Password 2
                        .ui.left.icon.input
                            input.password2(type='password')
                            i.lock.icon
                    button.ui.hhblue.submit.button(type='submit') Submit
