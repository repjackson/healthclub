template(name='nav')
    unless is_frontdesk
        //- .ui.borderless.attached.big.inverted.menu.topnav
        .ui.attached.big.five.item.borderless.menu.topnav
            //- a.toggle_sidebar.icon.item.sidebar_on
            //-     i.large.sidebar.icon
            if is_loading
                .icon.item
                    i.big.loading.refresh.icon
            else
                // a.icon.item(href='/home' class="{{isActivePath '/home'}}")
                //     +i name='circled-menu'
                //     //- i.th.large.icon
                // if in_dev
                //     a.icon.item(href='/buildings' class="{{isActivePath '/buildings'}}")
                //         //- i.building.large.icon
                //         +i name='apartment'
                //         .mobile.hidden &nbsp; buildings
                if is_staff
                    a.icon.item(href='/staff' class="{{isActivePath '/staff'}}")
                        //- i.shield.large.icon
                        +i name='user-shield'
                        .mobile.hidden &nbsp; staff
                    a.icon.item(href='/residents' class="{{isActivePath '/residents'}}")
                        //- i.users.large.icon
                        +i name='groups'
                        .mobile.hidden &nbsp; residents
                if is_manager
                    a.icon.item(href='/manager' class="{{isActivePath '/manager'}}")
                        //- i.shield.large.icon
                        +i name='user-shield'
                        .mobile.hidden &nbsp; manager
                if is_staff
                    a.icon.item(href='/checkin' class="{{isActivePath '/checkin'}}")
